class ScrollMouseEvent extends MouseEvent 
	
	static default eventType = "mouse_scroll";
	
	property MouseEvent.direction direction

	--[[
		@constructor
		@desc Creates a click mouse event from the arguments
		@param [MouseEvent.direction] direction -- the direction of the scroll
		@param [number] x -- the x screen coordinate
		@param [number] y -- the y screen coordinate
	]]
	function initialise( MouseEvent.direction direction, Number x, Number y )
		self.direction = direction
		self.x = x
		self.y = y
		self.globalX = x
		self.globalY = y
	end


end