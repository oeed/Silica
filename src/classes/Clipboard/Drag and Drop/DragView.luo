class DragView extends View 

	property Image image

	function onDraw()
		self.canvas:image( self.image, 1, 1, self.width, self.height )
	end

	set image( image )
		self.image = image
		self.needsDraw = true
	end

	get shadowMask()
		return self.shadowMask
	end

	set shadowMask( shadowMask )
		self.shadowMask = shadowMask
		self.needsDraw = true
	end

end