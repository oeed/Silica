class AlertWindow extends Window 

	default interfaceName = "alert-window"
	property Button link okayButton


	function initialise( ... )
		super( ... )

		self:event( LoadedInterfaceEvent, self.onInterfaceLoaded )
		self:event( ReadyInterfaceEvent, self.onReady )
	end

	function onReady( ReadyInterfaceEvent event, Event.phases phase )
		self:centre()
		self:focus()
		self.okayButton:focus()
	end

	static function display( String message, String title = "Alert", Function allowsNil callback, Table buttons = { "Okay" }, Number defaultButton = 1 )
		self.application.container:insert( AlertWindow() )
	end

end